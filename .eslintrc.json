{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "import/prefer-default-export": "off",
      "no-restricted-syntax": "off",
      "no-unused-vars": "warn",
      "import/extensions":[
        "error",
        "ignorePackages",
        {
            "ts": "never",
            "tsx": "never"
        }
    ]
    },
    "settings": {
      "import/resolver":{
          "typescript":{}
      }
  }

}
